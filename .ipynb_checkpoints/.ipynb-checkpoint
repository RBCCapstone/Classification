   "cell_type": "code",
   "execution_count": 26,
   "metadata": {},
   "outputs": [],
   "source": [
    "from collections import Counter\n",
    "import pandas as pd\n",
    "\n",
    "import re\n",
    "from nltk.corpus import stopwords\n",
    "\n",
    "stop = set(stopwords.words('english'))"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 3,
   "metadata": {},
   "outputs": [],
   "source": [
    "sentences = [\"VADER is smart, handsome, and funny.\",\n",
    "            \"Professor Scott is a great professor with excellent teaching skills and research ability\",\n",
    "            \"Eldan is a good programmer, he is very good at python and Java\",\n",
    "            \"George is a good programmer, he is good at Java and C++ but not doing that well in python\",\n",
    "            \"MIEXXX is such a boring course, the projects are too long to finish\",\n",
    "            \"MIE451 is a very intersting course which taught by a great professor and very useful knowledge\"]"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 51,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Go through the documents, create a counter for each and store it in an array\n",
    "\n",
    "counters = []\n",
    "for review in sentences:\n",
    "        counter = Counter()\n",
    "        counter.update([word.lower() \n",
    "                        for word \n",
    "                        in re.findall(r'\\w+', review) \n",
    "                        if word.lower() not in stop and len(word) > 2])\n",
    "        counters.append(dict(counter))"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 57,
   "metadata": {},
   "outputs": [],
   "source": [
    "# convert the counters array to a nice dataframe in one step and then do binary encoding\n",
    "df = pd.DataFrame(counters)\n",
    "df = df.fillna(0)                  # this is simply the term frequency df\n",
    "binarydf = df.where(df == 0,1)     # identify where there are zeros, everything else gets a 1"
   ]
  },
